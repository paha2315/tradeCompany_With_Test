<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="200.0" styleClass="main_menu_container" stylesheets="@../../styles/Menu.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trade_company.controllers.storekeeper.MenuController">
    <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="left_container">
        <VBox prefHeight="80.0" prefWidth="160.0" styleClass="title_container" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <HBox alignment="TOP_CENTER" prefHeight="0.0" spacing="8.0">
                <FontAwesomeIconView glyphName="TRUCK" size="38" />
                <FontAwesomeIconView glyphName="CUBES" size="36" />
            </HBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Моя торговля" />
        </VBox>
        <VBox prefHeight="630.0" prefWidth="160.0" styleClass="menu_container" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
            <Button fx:id="button_orders" mnemonicParsing="false" text="Заказы">
                <graphic>
                    <FontAwesomeIconView glyphName="SHOPPING_CART" size="20.0" />
                </graphic>
            </Button>
         <Button fx:id="button_availability" mnemonicParsing="false" text="Поставки">
            <graphic>
               <FontAwesomeIconView glyphName="EXCHANGE" size="20.0" />
            </graphic>
         </Button>
            <Button fx:id="button_reports" mnemonicParsing="false" text="Отчёты">
                <graphic>
                    <FontAwesomeIconView glyphName="BAR_CHART" size="20.0" />
                </graphic>
            </Button>
            <Line endX="151.0" />
            <Button fx:id="button_profile" mnemonicParsing="false" styleClass="alt_menu_btn" text="Профиль">
                <graphic>
                    <FontAwesomeIconView glyphName="USER" size="20.0" />
                </graphic>
            </Button>
            <Button fx:id="button_logout" mnemonicParsing="false" styleClass="alt_menu_btn" text="Выход из системы">
                <graphic>
                    <FontAwesomeIconView glyphName="EXTERNAL_LINK" size="20.0" />
                </graphic>
            </Button>
        </VBox>
    </AnchorPane>
</VBox>
